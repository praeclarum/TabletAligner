@page "/aligner"
@rendermode InteractiveServer

@inject IJSRuntime JS

<PageTitle>Aligner</PageTitle>

<h1>Align @publicationId</h1>

<canvas id="canvas"></canvas>

@code {
    private string publicationId = "P384786";

    private IJSObjectReference? editor;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            editor = await JS.InvokeAsync<IJSObjectReference>("createAlignmentEditor",
                "canvas", publicationId);
        }
    }
}
